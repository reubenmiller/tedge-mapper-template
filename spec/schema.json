{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "routes": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "skip": {
                    "type": "boolean"
                },
                "topics": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"type": "string"},
                            {
                                "type": "string",
                                "enum": [
                                    "tedge/measurements",
                                    "tedge/measurements/+",
                                    "tedge/events/+",
                                    "tedge/events/+/+",
                                    "tedge/alarms/+",
                                    "tedge/alarms/+/+"
                                ]
                            }
                        ]
                    }
                },
                "template": {
                    "$ref": "#/definitions/template"
                },
                "preprocessor": {
                    "$ref": "#/definitions/preprocessor"
                }
            },
            "required": ["topics"]
        },
        "preprocessor": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "csv"
                    ]
                },
                "fields": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "template": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["jsonnet"]
                },
                "value": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                }
            },
            "oneOf": [
                {"required": ["type", "value"]},
                {"required": ["type", "path"]}
            ]
        }
    },
    "properties": {
        "disable": {
            "type": "boolean"
        },
        "routes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/routes"
            }
        }
    }
}